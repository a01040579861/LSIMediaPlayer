<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#FFFF8D"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:background="#03E91E63"
        android:backgroundTint="#07E91E63"/>
    <Button
        android:id="@+id/btnCloseRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="likedListClose"
        android:textSize="11dp"
        android:textColor="#646465"
        android:textColorHighlight="#2E0707"
        android:backgroundTint="#A1FBFBFA"/>

</LinearLayout>